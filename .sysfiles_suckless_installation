USER="ugo"
SYS_DIR="/home/$USER/.sys"

# install custom system files
cd /home/$USER

for file in "$SYS_DIR/dotfiles"/.*; do
    ln -sf "$file" "/home/$USER/"
done

for file in "$SYS_DIR/binfiles"/*; do
    ln -f "$file" "/usr/local/bin/"
done

mkdir -p /home/$USER/.config
for file in "$SYS_DIR/config"/*; do
    ln -sf "$file" "/home/$USER/.config/"
done

ln -sf "$SYS_DIR/dotfiles/.bashrc" /root
ln -sf "$SYS_DIR/dotfiles/.vimrc" /root

# install font
mkdir -p /home/$USER/Downloads
curl -L -o /home/$USER/Downloads/Hack.zip https://sourceforge.net/projects/nerd-fonts.mirror/files/v3.0.0/Hack.zip/download
sudo unzip /home/$USER/Downloads/Hack.zip -d /usr/share/fonts/

# install suckless softwares
cd "$SYS_DIR/suckless/dwm" && make clean install
cd "$SYS_DIR/suckless/st" && make clean install
cd "$SYS_DIR/suckless/dmenu" && make clean install
cd "$SYS_DIR/suckless/slock" && make clean install
groupadd nogroup

# install discord
mkdir -p /usr/local/apps
/usr/local/bin/discord-updater
