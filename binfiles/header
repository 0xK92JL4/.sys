#!/bin/sh

FILENAME="$(basename "$1")"
AUTHOR="ugwentzi"
EMAIL="ugwentzi@student.42.fr"
NOW="$(date '+%Y/%m/%d %H:%M:%S')"

if [ -z "$FILENAME" ]; then
    echo "Usage: ./make_header.sh <filename>" >&2
    exit 1
fi

pad() {
    printf "%-54s" "$1"
}

echo   "/*┌──────────────────────────────────────────────────────────────────────────┐*/"
echo   "/*│                                                                          │*/"
printf "/*│  %s%s\n" "$(pad "$FILENAME")"                         "▒▒▒▒    ▒▒▒▒      │*/"
printf "/*│  %s%s\n" "$(pad "")"                                  "▒▒▒▒    ▒▒▒▒      │*/"
printf "/*│  %s%s\n" "$(pad "By: $AUTHOR <$EMAIL>")"              "    ▒▒▒▒          │*/"
printf "/*│  %s%s\n" "$(pad "")"                                  "  ▒▒▒▒▒▒▒▒        │*/"
printf "/*│  %s%s\n" "$(pad "Created: $NOW by $AUTHOR")"          "  ▒▒▒▒▒▒▒▒        │*/"
printf "/*│  %s%s\n" "$(pad "Updated: $NOW by $AUTHOR")"          "  ▒▒    ▒▒        │*/"
echo   "/*│                                                                          │*/"
echo   "/*└──────────────────────────────────────────────────────────────────────────┘*/"
